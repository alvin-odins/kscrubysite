 <div class="field">
   <%= f.label :email, "Email ID" %><br>
   <%= f.text_field :email, placeholder: "Email ID" %>
 </div><br>
 <div class="field">
   <%= f.label :username, "Username" %><br>
   <%= f.text_field :username, placeholder: "Username" %>
