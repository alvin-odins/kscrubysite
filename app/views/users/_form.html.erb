  </div><br>

  <div class="permanent">
    <%= f.label :perm_address, "Permanent Address" %><br>
    <%= f.text_field :perm_address, placeholder: "Permanet Address"%>
  </div><br>

  <div class="field">
    <%= f.label :country, "country" %><br>
    <%= f.country_select :country %>
  </div><br>

  <div class="field">
    <%= f.label :city, "City" %><br>
    <%= f.text_field :city, placeholder: "City" %>
  </div><br>
  <div class="field">
    <%= f.label :course, "Course" %><br>
    <%= f.text_field :course, placeholder: "Course" %>
  </div><br>
  <div class="field">
    <%= f.label :university, "Universty" %><br>
    <%= f.text_field :university, placeholder: "Universty" %>
  </div><br>


  <div class="field">
    
    <%= f.label :'How did you get to know about KSC' %><br><br>
