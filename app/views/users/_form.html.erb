    <%= f.radio_button :source, 'Social Media' %> Social
    <br><%= f.radio_button :source, 'Internet Search' %> Internet Search
    <%= f.radio_button :source, 'Internet Ad' %> Internet Ad
    <br><%= f.radio_button :source, 'Unknown' %> Unknown
    <%= f.radio_button :source, 'Other' %> Other

    <%= f.text_field :source %>
