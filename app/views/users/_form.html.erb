    <%= f.check_box :tos %><%= link_to 'Terms and Conditions', '/termscons' %>
  </div><br>

  <%= recaptcha_tags %>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div><br>

<% end %>
