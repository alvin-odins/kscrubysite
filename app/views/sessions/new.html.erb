<h1>Login</h1>
<div>
  <% if flash[:alert] %>
  <p id = "notice" ><%= flash[:alert] %> </p>
  <% end %>

  <%= form_tag :session do %>
  
  <div>
    <div class="field">
      <%= label_tag :username, "Username or Email" %><br>
      <%= text_field_tag :username, nil, placeholder: "Username or Email" %>
    </div>

    <div class="field">
      <%= label_tag :password, "Password" %><br>
      <%= password_field_tag :password, nil, placeholder: "Password" %>
    </div>



  </div>
  <div>
    <%= submit_tag "Login" %>
  </div>
</fieldset>
<% end %>
</div>
