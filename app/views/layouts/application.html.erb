<!DOCTYPE html>
<html>
<head>
  <title>Ksc</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <div id="langbar" align="right">

    </div>
    <nav class="navbar st-navbar navbar-static-top animated bounce">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#st-navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <img src="<%= asset_path('Ksc.png') %>", class="logo" />
        </div>

        <div class="collapse navbar-collapse" id="st-navbar-collapse">
          <ul class="nav navbar-nav ">
            <li><a href="/" class="active">HOME</a></li>
            <li><a href="/aboutus">ABOUT US</a></li>

            <li><a href="/forum">FORUM</a></li>
            <li><a href="/events">EVENTS</a></li>

            <li><a href="/gallery">GALLERY</a></li>

          </ul>


          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <select class="form-control">
                <option>Language</option>
                <option value="English">English</option>
                <option value="French">French</option>
              </select>
            </div>
          </form>
          <ul class="nav navbar-nav navbar-right">
            <% if(user_signed_in?) %>
            <li>
              <%= link_to session_path, method: :delete do %>
                <i class="glyphicon glyphicon-log-out"></i>
                Log out
              <% end %>
            </li>
            <% else %>
            <li><a href="#" data-toggle="modal" data-target="#login-modal">Log in</a></li>
            <li><a href="#" data-toggle="modal" data-target="#register-modal">Register</a></li>
            <% end %>
          </ul>

        </nav>
      </header>










      <div id="login-modal" class="modal fade">
        <%= render 'sessions/new' %>
      </div>

      <div id="register-modal" class="modal fade">
        <%= render 'users/form' %>
      </div>




      <div class="container">
      <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
      <% end %>

      <%= yield %>
      </div>


      <!-- FOOTER -->
	<footer id="footer">
		<div class="container">
			<div class="row">
				<!-- SOCIAL ICONS -->
				<div class="col-sm-6 col-sm-push-6 footer-social-icons">
					<span>Follow us:</span>
					<a href=""><i class="fa fa-facebook"></i></a>
					<a href=""><i class="fa fa-twitter"></i></a>
					<a href=""><i class="fa fa-google-plus"></i></a>
					<a href=""><i class="fa fa-linkedin"></i></a>
				</div>
				<!-- /SOCIAL ICONS -->
				<div class="col-sm-6 col-sm-pull-6 copyright">
          <p><i class="fa fa-creative-commons"></i><a href="">Knowledge Sharing Campaign</a>. All Rights Reserved.</p>
				</div>
			</div>
		</div>
	</footer>
	<!-- /FOOTER -->


	<!-- Scroll-up -->
	<div class="scroll-up">
		<ul><li><a href="#header"><i class="fa fa-angle-up"></i></a></li></ul>
	</div>


                </body>

                </html>
