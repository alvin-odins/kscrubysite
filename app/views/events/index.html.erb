
<hr class="featurette-divider">
<% provide(:title, "Events") %>
<div class="filter row">
	<div class="col-sm-4 col-sm-offset-3">
		<div class="btn-group btn-group-justified">
			<%= link_to "Upcoming Events", events_path(:upcoming => true), class: "btn btn-info btn-sm" %>
			<%= link_to "Past Events", events_path(:past => true), class: "btn btn-info btn-sm" %>
		</div>
	</div>
</div>


<div class="event-index row">
	<div class="col-sm-6 col-sm-offset-3">
	<%= render 'events/event_box' %>
	<%= will_paginate %>
	</div>
</div>
